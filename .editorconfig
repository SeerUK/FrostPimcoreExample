root = true

[*]
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,php,rb,py}]
charset = utf-8
indent_size = 4

[Makefile]
indent_style = tab

[composer.json]
indent_size = 4

[docker-compose.yml]
indent_size = 2

[{bower.json,package.json,.travis.yml}]
indent_size = 2
